{
  "manifest_version": 3,
  "name": "koomastudio",
  "version": "1.0.0",
  "description": "Save LinkedIn posts directly to koomastudio",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/feed/*",
        "https://www.linkedin.com/in/*",
        "https://www.linkedin.com/posts/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ]
}
